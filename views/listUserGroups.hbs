<div class="container-sm">
<h1>{{firstName}}'s Groups</h1>
<div class="table-responsive-sm mt-2">
{{#if groups.length}}
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each groups}}
    <tr>
      <td>{{name}}</td>
      <td>{{description}}</td>
      <td><a style="vertical-align: middle;" role="button" class="btn btn-outline-dark btn-sm"   href="/groups/{{groupId}}">View</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>Not a member of any group.</p>
{{/if}}
</div>
<div class="container-fluid">
        <a role="button" class="btn btn-outline-dark" href="/users">Back to Users</a>
    </div>
</div>
