<div class="container-fluid container-sm">
<h1>New Location</h1>
    <form method="POST" action="/location/create/new">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" id="name" required>
        </div>
        <div class="form-group">
            <label for="address1">Address 1</label>
            <input class="form-control" type="text" name="address1" id="address1">
        </div>
        <div class="form-group">
            <label for="address2">Address 2</label>
            <input class="form-control" type="text" name="address2" id="address2">
        </div>
        <div class="row">
            <div class="col">
            <label for="city">City</label>
            <input class="form-control" type="text" name="city" id="city">
            </div>
            <div class="col">
            <label for="state">State</label>
            <input class="form-control" type="text" name="state" id="state">
            </div>
            <div class="col">
            <label for="zipCode">Zip Code</label>
            <input class="form-control" type="number" name="zipCode" id="zipCode">
            </div>
        </div>
        <div class="row">
            <div class="col">
            <label for="longitude">Longitude</label>
            <input class="form-control" type="number" name="longitude" id="longitude" step=".00001" required>
            </div>
            <div class="col">
            <label for="latitude">Latitude</label>
            <input class="form-control" type="number" name="latitude" id="latitude" step=".000001" required>
            </div>
            <br>
        </div>
        <div class="container-fluid mt-3">
        <button type="submit" class="btn btn-outline-success">Submit</button>
        <a role="button" class="btn btn-outline-primary" href="/locations">Cancel</a>
        </div>
</div>