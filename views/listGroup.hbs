<div class="container-sm">
<h1>All Groups</h1> 
<div class="table-responsive-sm mt-2">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Action To Take</th>
        <th>Share Code</th>
      </tr>
    </thead>
    <tbody>
      {{#each groups}}
      <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>{{actionToTake}}</td>
        <td>{{shareCode}}</td>
        <td style="vertical-align: middle;" align="center"><a role="button" class="btn btn-outline-dark btn-sm"   href="/groups/{{groupId}}">View</a></td>
        <td hidden>{{groupId}}</td>
        <td hidden>{{activityId}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
  <div class="container-fluid">
        <a role="button" class="btn btn-outline-dark" href="/groups/new">Create Group</a>
    </div>
  </div>